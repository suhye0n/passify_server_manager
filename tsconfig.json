{
  "compileOnSave": false,
  "compilerOptions": {
    "module": "commonjs",
    "lib": [
      "es5",
      "es6",
      "dom"
    ],
    "rootDir": "src",
    "target": "es6",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "pretty": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "baseUrl": "src",
    "skipLibCheck": true,
    "declaration": false,
    "outDir": "dist",
    "allowJs": true,
    "noEmit": false,
    "paths": {
      "@/*": [
        "*"
      ],
      "@config": [
        "config"
      ],
      "@controllers/*": [
        "controllers/*"
      ],
      "@database": [
        "database"
      ],
      "@dtos/*": [
        "dtos/*"
      ],
      "@exceptions/*": [
        "exceptions/*"
      ],
      "@interfaces/*": [
        "interfaces/*"
      ],
      "@middlewares/*": [
        "middlewares/*"
      ],
      "@models/*": [
        "models/*"
      ],
      "@routes/*": [
        "routes/*"
      ],
      "@services/*": [
        "services/*"
      ],
      "@utils/*": [
        "utils/*"
      ],
      "@socket/*": [
        "socket/*"
      ],
      "http": [
        "./node_modules/http"
      ],
      "https": [
        "./node_modules/https"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json",
    ".env"
  ],
  "exclude": [
    "node_modules",
    "src/logs"
  ]
}